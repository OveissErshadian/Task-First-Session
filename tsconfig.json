{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "types": [],
    "include": "src/",
    "exclude": ["node_modules/"],
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": false,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  }
}
